<div class="container mt-4">
  <h1>New Review</h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Submit review", class: "btn btn-secondary text-white text-decoration-none px-3 py-1 mt-3" %>
  <% end %>
   <div class="mt-3">
    <%= link_to 'Back to Restaurants', restaurants_path, class: 'btn btn-secondary text-white text-decoration-none px-3 py-1 mt-3' %>
  </div>

</div>
