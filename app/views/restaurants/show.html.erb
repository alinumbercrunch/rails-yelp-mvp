<div class="card-product">
  <img src="<%= @restaurant.image_url %>"/>
  <div class="card-product-infos">
    <h2><%= @restaurant.name %></h2>
    <p><%= @restaurant.category %></p>
    <p><%= @restaurant.address %></p>
    <p><%= @restaurant.phone_number %></p>
  </div>


</div>
  <div class="card-product-reviews mt-4">
    <p class="h4"><strong>Reviews</strong></p>
    <ul class="list-group">
      <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item mb-2"><%= review.content %></li>
      <% end %>
    </ul>
  </div>

 <div class="mt-3">
    <%= link_to 'Add Review', new_restaurant_review_path(@restaurant), class: 'btn btn-secondary text-white text-decoration-none px-3 py-1 mt-3' %>
  </div>
  <div class="mt-3">
    <%= link_to 'Back to Restaurants', restaurants_path, class: 'btn btn-secondary text-white text-decoration-none px-3 py-1 mt-3' %>
  </div>
</div>
